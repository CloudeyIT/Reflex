<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Cloudey.Reflex.Core</PackageId>
        <Version>1.0.1</Version>
        <Authors>Kristo Lippur</Authors>
        <Company>Cloudey IT Ltd.</Company>
        <SupportUrl>https://cloudey.com</SupportUrl>
        <WebPage>https://cloudey.com</WebPage>
        <PackageTags>Cloudey;Reflex;Framework;Configuration;AspNetCore</PackageTags>
        <Description>
            Reflex is an opinionated pluggable application framework for ASP.NET Core. 
            This package contains some core features.

            See README for usage instructions.
        </Description>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/CloudeyIT/Reflex</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>
    
    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Autofac" Version="7.0.1" />
        <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="8.0.0" />
        <PackageReference Include="FluentValidation" Version="11.5.2" />
        <PackageReference Include="FluentValidation.AspNetCore" Version="11.3.0" />
        <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="11.5.2" />
        <PackageReference Include="morelinq" Version="3.*" />
        <PackageReference Include="NetEscapades.Configuration.Yaml" Version="3.*" />
        <PackageReference Include="Opw.HttpExceptions.AspNetCore" Version="4.0.2" />
        <PackageReference Include="Serilog" Version="2.*" />
        <PackageReference Include="Sentry" Version="3.*" />
        <PackageReference Include="Sentry.AspNetCore" Version="3.*" />
        <PackageReference Include="Sentry.Serilog" Version="3.*" />
        <PackageReference Include="Serilog.AspNetCore" Version="6.*" />
        <PackageReference Include="Serilog.Enrichers.Environment" Version="2.*" />
        <PackageReference Include="Serilog.Exceptions" Version="8.*" />
        <PackageReference Include="Serilog.Exceptions.EntityFrameworkCore" Version="8.*" />
        <PackageReference Include="Serilog.Extensions.Autofac.DependencyInjection" Version="5.*" />
    </ItemGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\" />
        <None Include="LICENSE" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
